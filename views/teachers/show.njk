{% extends "layout.njk" %}

{% block content %}

  <div class="card">

    <section
      class="avatar"
      style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
    </section>

    <section class="details">
      <h3> Detalhes </h3>

      <div class="item">
        <div> Professor </div>
        <div> {{ teacher.name }} </div>
      </div>

      <div class="item">
        <div> Idade </div>
        <div> {{ teacher.age }} </div>
      </div>

      <div class="item">
        <div> Escolaridade </div>
        <div> {{ teacher.graduation }} </div>
      </div>

      <div class="item">
        <div> Aulas </div>
        <div> {{ "Presenciais" if teacher.classes == "P" else "À distância" }} </div>
      </div>

      <div class="item">
        <div> Área de atuação </div>
        <div>
          {% for matter in teacher.matters %}
            <span> {{ matter }} </span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div> Desde </div>
        <div> {{ teacher.created_at }} </div>
      </div>

      <a href="/teachers/{{ teacher.id }}/edit" class="button"> Editar </a>

    </section>

  </div>

{% endblock content %}